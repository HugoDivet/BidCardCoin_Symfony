{% extends 'base.html.twig' %}

{% block title %}Lot index{% endblock %}

{% block body %}
    <h1>Lot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix de depart</th>
                <th>Est vendu ?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lot in lots %}
            <tr>
                <td>{{ lot.id }}</td>
                <td>{{ lot.Nom }}</td>
                <td>{{ lot.Description }}</td>
                <td>{{ lot.prixDepart }}</td>
                <td>{{ lot.isSold ? 'Oui' : 'Non' }}</td>
                <td>
                    <a href="{{ path('lot_show', {'id': lot.id}) }}"><Button type="button" class="btn btn-info">Afficher</Button></a>
                    <a href="{{ path('lot_edit', {'id': lot.id}) }}"><Button type="button" class="btn btn-warning">Modifier</Button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Il n'existe aucun lot.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lot_new') }}"><Button type="button" class="btn btn-success">Ajouter un lot</Button></a>
{% endblock %}
