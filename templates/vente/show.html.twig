{% extends 'base.html.twig' %}

{% block title %}Vente{% endblock %}

{% block body %}
    <h1>Vente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ vente.Attribute }}</td>
            </tr>
            <tr>
                <th>Date de debut</th>
                <td>{{ vente.dateDebut ? vente.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ vente.dateFin ? vente.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de debut</th>
                <td>{{ vente.heureDebut ? vente.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure de fin</th>
                <td>{{ vente.heureFin ? vente.heureFin|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
<h4> Liste des lots </h4>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prix de depart</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for lot in lots %}
            <tr>
                <td>{{ lot.Nom }}</td>
                <td>{{ lot.prixDepart }}</td>
                <td>
                    <a href="{{ path('lot_show', {'id': lot.id}) }}"><Button type="button" class="btn btn-info">Ench√©rir sur le lot</Button></a>
                    <a href="{{ path('lot_edit', {'id': lot.id}) }}"><Button type="button" class="btn btn-warning">Modifier</Button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Il n'y a pas de lots pour cette vente.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vente_index') }}"><Button type="button" class="btn btn-danger">Retour</Button></a>

    <a href="{{ path('vente_edit', {'id': vente.id}) }}"><Button type="button" class="btn btn-warning">Modifier la vente</Button></a>

{% endblock %}
