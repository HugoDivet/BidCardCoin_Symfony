{% extends 'base.html.twig' %}

{% block title %}Vente index{% endblock %}

{% block body %}
    <h1>Vente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Attribute</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Heure_debut</th>
                <th>Heure_fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.id }}</td>
                <td>{{ vente.Attribute }}</td>
                <td>{{ vente.dateDebut ? vente.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ vente.dateFin ? vente.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ vente.heureDebut ? vente.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ vente.heureFin ? vente.heureFin|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('vente_show', {'id': vente.id}) }}"><Button type="button" class="btn btn-info">Afficher</Button></a>
                    <a href="{{ path('vente_edit', {'id': vente.id}) }}"><Button type="button" class="btn btn-warning">Modifier</Button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Il n'existe aucune vente</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vente_new') }}"><Button type="button" class="btn btn-success">Ajouter une vente</Button></a>
{% endblock %}
