{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.Nom }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}"><Button type="button" class="btn btn-info">Afficher</Button></a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><Button type="button" class="btn btn-warning">Modifier</Button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'existe aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}"><Button type="button" class="btn btn-success">Ajouter une catégorie</Button></a>
{% endblock %}
