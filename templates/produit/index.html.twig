{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix de depart</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.Nom }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.PrixDeDepart }}</td>
                <td>{{ produit.Etat }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}"><Button type="button" class="btn btn-info">Afficher</Button></a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}"><Button type="button" class="btn btn-warning">Modifier</Button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Il n'existe aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('produit_new') }}"><Button type="button" class="btn btn-success">Ajouter un produit</Button></a>
{% endblock %}
